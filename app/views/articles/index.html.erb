<p style="color: green"><%= notice %></p>
<div class="container">
	<div class="row mt-3">
		<div class="col text-danger">
			<h1>Articles</h1>
		</div>
		<div class="col text-end">
			<%= link_to "New article", new_article_path, class: 'btn btn-primary' %>
		</div>
	</div>
</div>
<div id="articles">
	<% @articles.each do |article| %>
		<%= render article %>
		<p>
			<%= link_to "Show this article", article %>
		</p>
	<% end %>
</div>

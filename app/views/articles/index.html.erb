<p style="color: green"><%= notice %></p>
<div class="container">
	<div class="row mt-3">
		<div class="col text-danger">
			<h1>Articles</h1>
		</div>
		<div class="col text-end">
			<%= link_to "New article", new_article_path, class: 'btn btn-primary' %>
		</div>
	</div>
</div>
<div class="row mt-3">
	<div class="col-lg-8">
		<div id="articles" class="card">
			<div class="card-body">
				<% @articles.each do |article| %>
					<div class='card mb-4'>
						<div class='card-body'>
							<%= render article %>
							<div class="mt-2">
								<%= link_to "Show this article", article, class: 'btn btn-sm btn-info' %>
							</div>
						</div>
					</div>
				<% end %>
			</div>
		</div>
	</div>
	<div class="col-lg-4">
		<div class="card">
			<h3 class="card-title text-warning mx-2">Categories</h3>
			<div class="card-body">
				<div id="categories">
					<ul class="list-group">
						<% @categories.each do |category| %>
							<li class="list-group-item"><%= category.ten %></li>
						<% end %>
					</ul>
				</div>
			</div>
		</div>
	</div>
</div>
